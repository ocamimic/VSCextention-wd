{
	"scopeName": "source.wikidot",
	"patterns": [
	  {"include": "#error"},
	  {"include": "#modules"},
	  {"include": "#include"},
	  {"include": "#tags"},
	  {"include": "#markdown"},
	  {"include": "source.css"},
	  {"include": "source.php"},
	  {"include": "source.html"},
	  {"include": "source.cpp"},
	  {"include": "source.css"},
	  {"include": "source.diff"},
	  {"include": "source.dtd"},
	  {"include": "source.java"},
	  {"include": "source.javascript"},
	  {"include": "source.perl"},
	  {"include": "source.python"},
	  {"include": "source.ruby"},
	  {"include": "source.xml"}
	],
	"repository": {
		"tags": {
		"patterns": [
			{
				"name": "comment.block.wikidot",
				"begin": "\\[!--",
				"end": "--\\]"
			},
			{
				"name": "entity.name.tag.wikidot",
				"match": "\\[\\[\\/?(\\w+)(?:\\s(\\w+)=(\".*\"))*\\]\\]",
				"captures": {
					"1": { "name": "entity.name.tag.wikidot" },
					"2": { "name": "entity.other.attribute-name.wikidot" },
					"3": { "name": "string.quoted.double.wikidot" }
				}
			},
			{
				"name": "entity.name.tag.wikidot",
				"match": "\\[\\[\\/?\\w+\\]\\]"
			}
		]
		},
		"error": {
			"patterns": [
			]
		}
	},
	"injections": {
		"L:source.wikidot": {
			"patterns": [
				{
					"begin": "(?i)(\\[\\[module CSS[.]*\\]\\])",
					"end": "(?i)(\\[\\[/module\\]\\])",
					"contentName": "source.css"
				},
				{
					"begin": "(?i)(\\[\\[code \\s+type=\"css\"\\s*\\]\\])",
					"end": "(?i)(\\[\\[/code\\]\\])",
					"contentName": "source.css"
				},
				{
					"begin": "(?i)(\\[\\[code \\s+type=\"php\"\\s*\\]\\])",
					"end": "(?i)(\\[\\[/code\\]\\])",
					"contentName": "source.php"
					},
					{
					"begin": "(?i)(\\[\\[code \\s+type=\"html\"\\s*\\]\\])",
					"end": "(?i)(\\[\\[/code\\]\\])",
					"contentName": "text.html"
					},
					{
						"begin": "(?i)(\\[\\html\\]\\])",
						"end": "(?i)(\\[\\[/html\\]\\])",
						"contentName": "text.html"
					},
					{
					"begin": "(?i)(\\[\\[code \\s+type=\"cpp\"\\s*\\]\\])",
					"end": "(?i)(\\[\\[/code\\]\\])",
					"contentName": "source.cpp"
					},
					{
					"begin": "(?i)(\\[\\[code \\s+type=\"diff\"\\s*\\]\\])",
					"end": "(?i)(\\[\\[/code\\]\\])",
					"contentName": "source.diff"
					},
					{
					"begin": "(?i)(\\[\\[code \\s+type=\"dtd\"\\s*\\]\\])",
					"end": "(?i)(\\[\\[/code\\]\\])",
					"contentName": "source.dtd"
					},
					{
					"begin": "(?i)(\\[\\[code \\s+type=\"java\"\\s*\\]\\])",
					"end": "(?i)(\\[\\[/code\\]\\])",
					"contentName": "source.java"
					},
					{
					"begin": "(?i)(\\[\\[code \\s+type=\"javascript\"\\s*\\]\\])",
					"end": "(?i)(\\[\\[/code\\]\\])",
					"contentName": "source.javascript"
					},
					{
					"begin": "(?i)(\\[\\[code \\s+type=\"perl\"\\s*\\]\\])",
					"end": "(?i)(\\[\\[/code\\]\\])",
					"contentName": "source.perl"
					},
					{
					"begin": "(?i)(\\[\\[code \\s+type=\"python\"\\s*\\]\\])",
					"end": "(?i)(\\[\\[/code\\]\\])",
					"contentName": "source.python"
					},
					{
					"begin": "(?i)(\\[\\[code \\s+type=\"ruby\"\\s*\\]\\])",
					"end": "(?i)(\\[\\[/code\\]\\])",
					"contentName": "source.ruby"
					},
					{
					"begin": "(?i)(\\[\\[code \\s+type=\"xml\"\\s*\\]\\])",
					"end": "(?i)(\\[\\[/code\\]\\])",
					"contentName": "source.xml"
					}
			]
		}
	}
}

  
